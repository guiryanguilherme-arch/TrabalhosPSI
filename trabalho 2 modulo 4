print("      CART√ìRIO DIGITAL - GESTOR DE NOMES")
print("==========================================")
print(" Sistema de registo de cidad√£os imigrantes")
print("==========================================")

# -------------------------------------------------
# LISTA PRINCIPAL COM 10 CIDAD√ÉOS REGISTADOS
# -------------------------------------------------

cidadaos = [
    {"nome": "Jo√£o Silva", "nascimento": "10/02/2006", "pais": "Portugal"},
    {"nome": "Maria Costa", "nascimento": "15/07/2005", "pais": "Brasil"},
    {"nome": "Pedro Fernandes", "nascimento": "22/11/2004", "pais": "Angola"},

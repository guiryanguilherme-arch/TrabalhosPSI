    {"nome": "Beatriz Santos", "nascimento": "30/12/2006", "pais": "Mo√ßambique"},
    {"nome": "Tiago Pereira", "nascimento": "25/05/2005", "pais": "Portugal"},
    {"nome": "In√™s Almeida", "nascimento": "08/08/2004", "pais": "Brasil"},
    {"nome": "Rui Oliveira", "nascimento": "14/04/2007", "pais": "Guin√©-Bissau"},
    {"nome": "Sofia Martins", "nascimento": "19/01/2006", "pais": "Portugal"}
]

# -------------------------------------------------
# FUN√á√ÉO: MOSTRAR MENU
# -------------------------------------------------

def mostrar_menu():
    print("\n=========== MENU DO CART√ìRIO ===========")
    print("1 - Adicionar novo cidad√£o")
    print("2 - Remover cidad√£o")
    print("3 - Listar todos os cidad√£os")
    print("4 - Procurar cidad√£o pelo nome")
    print("5 - Mostrar cidad√£os por ordem alfab√©tica")
    print("6 - Mostrar total de registos")
    print("7 - Sair")
    print("=======================================")

# -------------------------------------------------
# FUN√á√ÉO: ADICIONAR CIDAD√ÉO
# -------------------------------------------------

def adicionar_cidadao():
    nome = input("Nome completo: ")
    nascimento = input("Data de nascimento (dd/mm/aaaa): ")
    pais = input("Pa√≠s de origem: ")

    pessoa = {"nome": nome, "nascimento": nascimento, "pais": pais}
    cidadaos.append(pessoa)

    print("‚úÖ Cidad√£o registado com sucesso!")

# -------------------------------------------------
# FUN√á√ÉO: REMOVER CIDAD√ÉO
# -------------------------------------------------

def remover_cidadao():
    nome = input("Digite o nome do cidad√£o a remover: ")

    for pessoa in cidadaos:
        if pessoa["nome"].lower() == nome.lower():
            cidadaos.remove(pessoa)
            print("‚úÖ Cidad√£o removido com sucesso!")
            return

    print("‚ùå Cidad√£o n√£o encontrado.")

# -------------------------------------------------
# FUN√á√ÉO: LISTAR CIDAD√ÉOS
# -------------------------------------------------

def listar_cidadaos():
    if len(cidadaos) == 0:
        print("Nenhum cidad√£o registado.")
        return

    print("\nüìå LISTA DE CIDAD√ÉOS REGISTADOS:")
    for pessoa in cidadaos:
        print("-----------------------------------")
        print("Nome:", pessoa["nome"])
        print("Nascimento:", pessoa["nascimento"])
        print("Pa√≠s:", pessoa["pais"])

# -------------------------------------------------
# FUN√á√ÉO: PROCURAR CIDAD√ÉO
# -------------------------------------------------

def procurar_cidadao():
    termo = input("Digite o nome ou parte do nome: ")

    encontrados = False

    for pessoa in cidadaos:
        if termo.lower() in pessoa["nome"].lower():
            print("\n‚úÖ Encontrado:")
            print("Nome:", pessoa["nome"])
            print("Nascimento:", pessoa["nascimento"])
            print("Pa√≠s:", pessoa["pais"])
            encontrados = True

    if not encontrados:
        print("‚ùå Nenhum cidad√£o encontrado.")

# -------------------------------------------------
# FUN√á√ÉO: ORDENAR POR NOME
# -------------------------------------------------
def ordenar_alfabetico():
    nomes = []

    for pessoa in cidadaos:
        nomes.append(pessoa["nome"])

    nomes.sort()

    print("\nCIDAD√ÉOS EM ORDEM ALFAB√âTICA:")
    for nome in nomes:
        print("-", nome)


# ------------------5
# -------------------------------
# FUN√á√ÉO: TOTAL DE REGISTOS
# -------------------------------------------------

def total_registos():
    print("\nTotal de cidad√£os registados:", len(cidadaos))

# -------------------------------------------------
# PROGRAMA PRINCIPAL
# -------------------------------------------------

def main():
    while True:
        mostrar_menu()
        opcao = input("Escolha uma op√ß√£o: ")

        if opcao == "1":
            adicionar_cidadao()

        elif opcao == "2":
            remover_cidadao()

        elif opcao == "3":
            listar_cidadaos()

        elif opcao == "4":
            procurar_cidadao()

        elif opcao == "5":
            ordenar_alfabetico()

        elif opcao == "6":
            total_registos()

        elif opcao == "7":
            print("\nPrograma encerrado. Obrigado!")
            break

        else:
            print("‚ùå Op√ß√£o inv√°lida. Tente novamente.")

# -------------------------------------------------
# EXECU√á√ÉO DO PROGRAMA
# -------------------------------------------------

if __name__ == "__main__":
    main()
